<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Login</title>
    <link rel="stylesheet" href="/style.css">
  </head>
  <body>
    <div class="links">
      <div class="links-left">

      </div>
      <div class="links-right">
        <a href="/login">Login</a>
        <a href="/signup">Sign Up</a>        
      </div>
    </div>

    <h1>Login</h1>
    <form class="" action="index.html" method="post">
      <label>Username:</label><br />
      <input type="text" name="username" />
      <label>Password:</label><br />
      <input type="password" name="password" />
      <label>Full Name:</label><br />
      <input type="text" name="name" />
      <label>Avatar URL:</label><br />
      <input type="text" name="avatarURL" />
      <label>Email:</label><br />
      <input type="email" name="email" />
      <label>University:</label><br />
      <input type="text" name="university" />
      <label>Occupation:</label><br />
      <input type="text" name="job" />
      <label>Company:</label><br />
      <input type="text" name="company" />
      <label>Skills: (separate by semicolons)</label><br />
      <input type="text" name="skills" />
      <label>Phone:</label><br />
      <input type="tel" name="phone" />
      <label>Street Number:</label><br />
      <input type="text" name="street_num" />
      <label>Street Name:</label><br />
      <input type="text" name="street_name" />
      <label>City:</label><br />
      <input type="text" name="city" />
      <label>State or Province:</label><br />
      <input type="text" name="state_or_province" />
      <label>Country:</label><br />
      <input type="country" name="country" />
      <button type="submit">Add User</button>
    </form>
  </body>
</html>
