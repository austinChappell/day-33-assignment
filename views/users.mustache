<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Users</title>
    <link rel="stylesheet" href="/./style.css">
  </head>
  <body>
    <div class="links">
      <a href="/directory">All</a>
      <a href="/unemployed">Unemployed</a>
      <a href="/employed">Employed</a>
      <a href="/add">Add</a>
      <a href="/login">Login</a>
      <a href="/signup">Sign Up</a>
      <a href="/logout">Logout</a>
    </div>
    <div class="container">
      {{ #users }}
      <a href="/{{ id }}" class="user">
        <img src="{{ avatar }}" alt="">
        <h2>{{ name }}</h2>
        {{ #job }}
          <p>{{ job }}, {{ company }}</p>
        {{ /job }}
        {{ ^job }}
          <p class="unemployed">Available for hire</p>
        {{ /job }}
      </a>
      {{ /users }}
    </div>
  </body>
</html>
